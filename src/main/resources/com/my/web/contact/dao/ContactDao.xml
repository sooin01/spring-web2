<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.my.web.contact.dao.ContactDao">

	<select id="getContactList" resultType="Contact">
		select a.ID,
		       a.FIRST_NAME,
		       a.LAST_NAME,
		       a.BIRTH_DATE
		  from contact a
	</select>
	
	<select id="getContactById" parameterType="int" resultType="Contact">
		select a.ID,
		       a.FIRST_NAME,
		       a.LAST_NAME,
		       a.BIRTH_DATE
		  from contact a
		 where a.ID = #{id} 
	</select>
	
	<select id="getContact" parameterType="Contact" resultType="Contact">
		select a.ID,
		       a.FIRST_NAME,
		       a.LAST_NAME,
		       a.BIRTH_DATE
		  from contact a
		 where a.ID = #{id}
		   and a.FIRST_NAME = #{firstName}
	</select>
	
	<insert id="insertContact" parameterType="Contact">
		insert into contact
		values (
			#{id}, #{firstName}, #{lastName}, #{birthDate}
		)
	</insert>
	
	<delete id="deleteContact" parameterType="Contact">
		delete from contact where id = #{id}
	</delete>

</mapper>